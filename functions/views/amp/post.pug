doctype html
html(⚡ lang='zh-Hant-TW')
  head
    meta(charset='utf-8')
    title=title
    meta(name='description' content=description)
    link(rel='canonical' href=path)
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no, user-scalable=no')
    meta(http-equiv='X-UA-Compatible' content='IE=edge, chrome=1')
    link(rel='shortcut icon' type='image/x-icon' href='/icon/favicon.ico')
    meta(name='apple-mobile-web-app-title' content=title)
    link(rel='apple-touch-icon' href='/touch-icon-iphone.png')
    link(rel='apple-touch-icon' sizes='152x152' href='/touch-icon-ipad.png')
    link(rel='apple-touch-icon' sizes='180x180' href='/touch-icon-iphone-retina.png')
    link(rel='apple-touch-icon' sizes='167x167' href='/touch-icon-ipad-retina.png')
    meta(property='og:title' content=title)
    meta(property='og:description' content=description)
    meta(property='og:url' content=path)
    meta(property='og:image' content=featuredImage.replace(/200x200/, '1280x1280'))
    meta(property='og:locale' content='zh_tw')
    meta(property='og:type' content='article')
    meta(name='twitter:card' content='summary')
    include partials/_amp-custom-post.pug
    script(async src='https://cdn.ampproject.org/v0.js')
    script(async custom-element='amp-sidebar' src='https://cdn.ampproject.org/v0/amp-sidebar-0.1.js')
    script(async custom-element='amp-lightbox' src='https://cdn.ampproject.org/v0/amp-lightbox-0.1.js')
    script(async custom-element='amp-form' src='https://cdn.ampproject.org/v0/amp-form-0.1.js')
    script(async custom-element='amp-script' src='https://cdn.ampproject.org/v0/amp-script-0.1.js')
    script(async custom-element='amp-youtube' src='https://cdn.ampproject.org/v0/amp-youtube-0.1.js')
    script(async custom-element='amp-iframe' src='https://cdn.ampproject.org/v0/amp-iframe-0.1.js')
    script(async custom-element='amp-lightbox-gallery' src='https://cdn.ampproject.org/v0/amp-lightbox-gallery-0.1.js')
    script(async custom-element='amp-analytics' src='https://cdn.ampproject.org/v0/amp-analytics-0.1.js')
    include partials/_amp-boilerplate.pug
    if post.featuredImage
      -var image = post.featuredImage.replace(/200x200/, '1280x1280')
    else
      -var image = blogger.imageUrl
    -var datePublished = moment(post.public_time * 1000).utcOffset(8).format()
    if post.update_time
      -var dateModified = moment(post.update_time * 1000).utcOffset(8).format()
    else
      -var dateModified = moment(post.public_time * 1000).utcOffset(8).format()
    script(type='application/ld+json').
      {"@context":"https://schema.org","@type":"Article","mainEntityOfPage":{"@type":"WebPage","@id":"#{path}"},"headline":"#{post.title}","image":["#{image}"],"datePublished":"#{datePublished}","dateModified":"#{dateModified}","author":{"@type":"Person","name":"黃彥瑜"},"publisher":{"@type":"Organization","name":"#{blogger.author}","logo":{"@type":"ImageObject","url":"https://lefty.blog/logo.png","width":396,"height":60}}}
  body
    include partials/_navbar.pug
    article.post.container-fluid.container__fixedNavbar--margin.pt-3.pb-4.mb-3
      .post__title.px-4.mb-3
        a.post__category.d-flex.align-items-center.mb-3(href='/categories/'+category.path)
          amp-img.card__title__icon--lg.rounded-circle(src=category.thumbnail||blogger.othersThumbnail alt=category.name width='30' height='30' layout=fixed)
          p.mb-0.ml-2=category.name
        h1.h4.font-weight-bold.mb-2=post.title
        .d-flex.align-items-center
          if post.update_time
            time(datetime=moment(post.update_time * 1000).utcOffset(8).format('YYYY-MM-DD'))=moment(post.update_time * 1000).utcOffset(8).format('LL')
          else
            time(datetime=moment(post.public_time * 1000).utcOffset(8).format('YYYY-MM-DD'))=moment(post.public_time * 1000).utcOffset(8).format('LL')
          a.post__author.ml-2(href='/about-me' rel='author') by 黃彥瑜
      .post__content
        !=post.content
      if post.tagsArray
        .post__tags.px-4.mt-5
          -for(var tagsDoc in post.tagsArray)
            a.btn.btn-info.mr-2.my-1(rel='tag' href='/tags/'+post.tagsArray[tagsDoc])=post.tagsArray[tagsDoc]
      if postPrev||postNext
        .form-row.px-4
          if postPrev
            a.post__series.col-6.mt-4.py-2(href='/amp/'+category.path+'/'+postPrev.path rel='prev')
              small.d-block.mb-1 《 上一篇
              span.line-clamp-2=postPrev.title
          if postNext
            a.post__series.col-6.mt-4.py-2.ml-auto(href='/amp/'+category.path+'/'+postNext.path rel='next')
              small.d-block.text-right.mb-1 下一篇 》
              span.line-clamp-2.text-right=postNext.title
      .post__donate.mx-4.mt-3
        a.d-flex.align-items-center.justify-content-center.py-2(href='/donate')
          span.icon--size--lg.icon__donate--black
          span.post__donate__text.ml-2 自由樂捐
    include partials/_profile.pug
    include partials/_footer.pug
    amp-analytics(type='googleanalytics')
      script(type='application/json').
        {
          "vars": {
            "account": "UA-164584284-1"
          },
          "triggers": {
            "trackPageview": {
              "on": "visible",
              "request": "pageview"
            }
          }
        }